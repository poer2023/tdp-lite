# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tdp_lite

# Cloudflare R2 Storage (shared with /Users/wanghao/Project/tdp)
# Preferred naming (same as tdp project):
# Priority rule: when both are present, S3_* takes precedence.
S3_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
S3_REGION=auto
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=media
S3_CDN_URL=https://pub-xxxx.r2.dev

# Backward-compatible aliases (optional)
CLOUDFLARE_R2_ENDPOINT=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET=
R2_PUBLIC_URL=

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Access Control (comma-separated emails allowed to login)
ALLOWED_EMAILS=your@email.com

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
TDP_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_TDP_API_BASE_URL=http://localhost:8080
# Search source priority for /api/search fallback router: "next" | "go"
TDP_SEARCH_PRIMARY=next

# Go backend runtime
TDP_API_ADDR=:8080
TDP_PREVIEW_SECRET=change_me_to_random_preview_secret
TDP_TIMESTAMP_SKEW=5m
TDP_NONCE_TTL=10m
TDP_PREVIEW_TTL=2h
TDP_JOB_POLL_INTERVAL=3s
TDP_INTERNAL_KEY_ID=
TDP_INTERNAL_KEY_SECRET=

# Publisher V2 switch (when enabled, /admin redirects to external publisher)
PUBLISHER_BASE_URL=http://localhost:3100

# Legacy publish API auth vars (deprecated after Go backend cutover)
PUBLISHER_V2_ENABLED=true
PUBLISHER_KEY_ID=
PUBLISHER_KEY_SECRET=
# PUBLISHER_KEYS=

# Multi-provider AI keys (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
