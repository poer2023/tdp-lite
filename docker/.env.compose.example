# PostgreSQL
POSTGRES_USER=tdp
POSTGRES_PASSWORD=tdp
POSTGRES_DB=tdp_lite
TDP_DB_BIND_HOST=127.0.0.1
TDP_DB_PORT=5432

# Lite web auth (replace in production)
NEXTAUTH_URL=http://localhost:3000
# Required: set a strong random secret
NEXTAUTH_SECRET=replace_with_strong_random_secret
GOOGLE_CLIENT_ID=placeholder.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=placeholder
ALLOWED_EMAILS=you@example.com

# API runtime
TDP_APP_BASE_URL=http://localhost:3000
# Required: set a strong random secret
TDP_PREVIEW_SECRET=replace_with_strong_random_preview_secret
TDP_TIMESTAMP_SKEW=5m
TDP_NONCE_TTL=10m
TDP_PREVIEW_TTL=2h
TDP_JOB_POLL_INTERVAL=3s

# Shared signing key for publisher -> api
TDP_INTERNAL_KEY_ID=publisher-local
# Required: set a strong random secret
TDP_INTERNAL_KEY_SECRET=replace_with_long_random_secret

# Optional service ports
TDP_WEB_BIND_HOST=0.0.0.0
TDP_WEB_PORT=3000
TDP_API_BIND_HOST=127.0.0.1
TDP_API_PORT=8080
PUBLISHER_BIND_HOST=127.0.0.1
PUBLISHER_PORT=3100

# Publisher public URL (used by publisher UI)
NEXT_PUBLIC_PUBLISHER_URL=http://localhost:3100

# Optional profile sync service (enable with compose profile: sync)
PROFILE_SYNC_INTERVAL_HOURS=24
PROFILE_SYNC_TIMEOUT_MS=20000
